<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :user %>
    <%= f.association :project %>
    <%= f.input :image_url %>
    <%= f.input :music_url %>
    <%= f.input :video_url %>
    <%= f.input :message %>
    <%= f.input :title %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
